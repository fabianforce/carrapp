<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


<android.support.v7.widget.CardView android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:elevation="5dp"
                                    card_view:cardCornerRadius="8dp"
    android:background="#3252f2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f15353"
        android:id="@+id/cartas"
       >


        <LinearLayout
            android:id="@+id/milinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/mission"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/con_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fabian Humberto Castillo pineda "/>


                <TextView
                    android:id="@+id/con_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salio : 3 : 40 pm"/>


            </LinearLayout>


        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/milinear">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salida"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/con_latidud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Salida"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LLegada"/>



    <TextView
        android:id="@+id/con_longitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LLegada"
        android:textSize="30dp"
        android:textStyle="bold"

        />


</LinearLayout>




</LinearLayout>





    </RelativeLayout>


</android.support.v7.widget.CardView>

</LinearLayout>