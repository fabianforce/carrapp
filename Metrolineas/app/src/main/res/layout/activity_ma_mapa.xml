<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:fab="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                android:background="#f2f2f2"
                                             tools:context="com.metroapp.codering.metrolineas.Ma_mapa"
    >




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/linear_titulo"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft= "10dp"
            android:textSize="20sp"

            android:text="Registro conductor UPB"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="3dp"
            android:background="@drawable/img"
           />

    </LinearLayout>



</LinearLayout>





    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"
        android:id="@+id/img_salida"
        android:layout_below="@+id/lab_salida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"

        />

    <TextView
        android:id="@+id/lab_salida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salgo desde:"

        android:layout_toRightOf="@+id/img_salida"
        android:layout_below="@+id/linear_titulo"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
       />


    <EditText
        android:id="@+id/Txt_salida"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="salgo desde"
        android:layout_below="@+id/lab_salida"
        android:layout_toRightOf="@+id/img_salida"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

       />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@+id/lab_salida"
        android:background="@drawable/ic_location"
        android:layout_below="@+id/Txt_salida"
        android:id="@+id/btn_posicion"
        android:layout_marginLeft="20dp"/>




    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_salida"

        android:layout_marginLeft="10dp"
        android:text="latitude"
        android:layout_below="@+id/my_switch1"

        />




    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/latitude"

        android:layout_below="@+id/my_switch1"
        android:layout_marginLeft="40dp"
        android:text="longitud"/>



    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_wapp"
        android:layout_toRightOf="@+id/img_salida"
        android:text="Activar Servicio  "
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/my_switch1"
        android:layout_marginLeft="10dp"


        style="@style/Switchtema"/>




    <TextView
        android:id="@+id/lab_hsalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
        android:layout_below="@+id/linear_titulo"
        android:layout_toRightOf="@+id/Txt_salida"
        android:layout_marginLeft="50dp"
        android:text="Hora de salida"/>


    <ImageButton
        android:id="@+id/btn_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"
       android:layout_below="@+id/lab_hsalida"

        android:layout_toRightOf="@+id/Txt_salida"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/mostar_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/btn_hora"
        android:layout_marginLeft="8dp"
        android:padding="10dp"
        android:text="00:00"
        android:textSize="20sp"
android:layout_below="@+id/lab_hsalida"
        android:layout_marginTop="10dp"
        />


    <ImageView
        android:id="@+id/img_llegada"
        android:background="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/img_salida"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"


       />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"

       android:layout_toRightOf="@+id/img_llegada"
        android:layout_below="@+id/txt_llegada"
        android:id="@+id/img_wapp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_llegada"
        android:hint="# Celular"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_wapp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_wapp"/>

