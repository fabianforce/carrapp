<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

    android:background="@drawable/shapemarker">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductor"
                android:textSize="10sp"
                android:textColor="#54a48d"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabian Castillo Pineda"
                android:id="@+id/marker_user"
                android:textColor="#fff"
                android:textSize="10sp"/>

        </LinearLayout>



        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_reloj"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#86ffe1"
                android:text="Hora salida"
                android:textSize="10sp"
               />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaff6d"
                android:text="00:00"
                android:layout_marginLeft="2dp"

                android:id="@+id/marker_labelhora"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

      >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/start"/>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salida"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:id="@+id/marker_label"
            android:layout_marginLeft="3dp"
            android:textSize="10sp"
          />






    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/finish"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llegada"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:id="@+id/marker_labelllega"
            android:textColor="#fff"
            android:layout_marginLeft="3dp"/>




    </LinearLayout>









</LinearLayout>