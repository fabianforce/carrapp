<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metroapp.codering.metrolineas.Ma_nmenu"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#6d7970"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#ef6666"
            android:id="@+id/lab_acuser"
            android:text="fabbdasdasd"
            android:textAlignment="center"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <android.support.v7.widget.CardView
            android:layout_width="307dp"
            android:layout_height="115dp"
android:id="@+id/car_autos_online"

            android:layout_marginTop="5dp">


            <LinearLayout
                android:layout_width="307dp"
                android:layout_height="115dp"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/cerclebackgroundpink"
                    android:padding="10dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/ic_car"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Automoviles online"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="#ed2269"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <android.support.v7.widget.CardView
            android:layout_width="143dp"
            android:layout_height="150dp"
            >


            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/cerclebackgroundpurple"
                    android:padding="10dp"
                    android:src="@drawable/ic_car"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Conductores"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/ligthgray"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:gravity="center"

                    android:paddingBottom="5dp"
                    android:text="Conductores UPB disponibles"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="0.49"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="143dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:id="@+id/car_soyconductor">


            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/cerclebackgroundpink"
                    android:padding="10dp"
                    android:src="@drawable/i_paradas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Conductor"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#ed2269"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"

                    android:text="Conductor UPB disponible"
                    android:textColor="@android:color/darker_gray"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <android.support.v7.widget.CardView
            android:layout_width="143dp"
            android:layout_height="150dp"
            android:id="@+id/car_pruebas"
            >


            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/cerclebackgroundpurple"
                    android:padding="10dp"
                    android:src="@drawable/ic_car"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Automoviles online"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/ligthgray"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:gravity="center"

                    android:text="automoviles disponibles ahora"
                    android:textColor="@android:color/darker_gray"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="143dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:id="@+id/car_postear_problemas">


            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/cerclebackgroundpink"
                    android:padding="10dp"
                    android:src="@drawable/i_paradas"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Postear"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#ed2269"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:gravity="center"
               android:paddingBottom="5dp"
                    android:text="Objetos perdidos y mas en la Upb"
                    android:textColor="@android:color/darker_gray"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>
